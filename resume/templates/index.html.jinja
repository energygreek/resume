<!DOCTYPE html>
<html lang="zh">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{_("Resume of")}} {{basics.name}}({{basics.label}})</title>
</head>

<body>
    <div class="container">
        <!-- Header Section -->
        <div class="header">
            <h1><strong>{{basics.name}}</strong>({{basics.label}})</h1>
            <p><a href="{{ basics['url'] }}">{{ basics['url'] }}</a></p>
            <p>{{basics['email']}} | {{basics['phone']}}</p>
        </div>

        <div class="columns">
            <!-- Left Column -->
            <div class="left-column">
                {% if basics.image %}
                <div class="photo"></div>
                {%endif%}
                <div class="section">
                    <h2>{{_("Location")}}</h2>
                    <p>{{basics.location['address']}} {{basics.location['postalCode']}}</p>
                    <p>{{basics.location['city']}} {{basics.location['region']}} {{basics.location['countryCode']}}</p>
                </div>

                <div class="section">
                    <h2>{{_("Education")}}</h2>
                    {%for item in resume.education%}
                    <p>{{item.institution}}</p>
                    <p>{{item.area}}</p>
                    <p>{{_("Graduation")}}: {{item.endDate}}</p>
                    <p>{{item.studyType}}</p>
                    {%endfor%}
                </div>

                <div class="section">
                    <h2>{{_("Skills")}}</h2>
                    <ul>
                        {% for item in resume['skills'] %}
                        <li>{{item.name}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="section">
                    <h2>{{_("Certificates")}}</h2>
                    <ul>
                        {% for item in resume['certificates'] %}
                        <li>{{ item.name }}({{item.date}}) by {{item.issuer}}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="section">
                    <h2>{{_("Links")}}</h2>
                    <ul>
                        {% for item in basics['profiles'] %}
                        <li><a href="{{item['url']}}">{{item['network']}}({{item['username']}})</a></li>
                        {%endfor%}
                    </ul>
                </div>
            </div>

            <!-- Right Column -->
            <div class="right-column">
                <div class="section">
                    <h2>{{_("Experience")}}</h2>
                    {% for item in resume.work%}
                    <p><strong>{{item.position}}</strong> - {{item.name}}</p>
                    <p>{{item.startDate}} - {{item.endDate}}</p>
                    <p>{{item.summary}}</p>
                    <ur>
                        {%for hl in item.highlights %}
                        <li>{{hl}}</li>
                        {%endfor%}
                    </ur>
                    {%endfor%}
                </div>

                <div class="section">
                    <h2>{{_("Projects")}}</h2>
                    {%for item in resume.projects%}
                    <p><strong>{{item.name}}</strong></p>
                    <p>{{item.description}}</p>
                    {%endfor%}
                </div>

                <div class="section">
                    <h2>{{_("Interests")}}</h2>
                    {%for item in resume.interests%}
                    <p>{{item.name}}</p>
                    {%endfor%}
                </div>
            </div>
        </div>
    </div>
</body>

<style>
    /* General Page Styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f3f3f3;
        color: #333;
    }

    .container {
        width: 850px;
        margin: 0 auto;
        background: #fff;
        padding: 40px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
    }

    .header {
        text-align: center;
        margin-bottom: 30px;
    }

    .header h1 {
        font-size: 36px;
        margin: 0;
    }

    .header p {
        font-size: 14px;
        margin: 5px 0;
    }

    .columns {
        display: flex;
        column-gap: 20px;
    }

    .left-column {
        width: 30%;
        border-right: 1px solid #ddd;
        padding-right: 20px;
    }

    .right-column {
        width: 70%;
        padding-left: 20px;
    }

    .section {
        margin-bottom: 20px;
    }

    .section h2 {
        font-size: 18px;
        color: #444;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
        margin-bottom: 10px;
    }

    .section p,
    .section li {
        font-size: 14px;
        line-height: 1.6;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    .photo {
        width: 120px;
        height: 120px;
        background: #ccc;
        border-radius: 50%;
        margin: 20px auto;
    }

    a {
        color: #0073e6;
        text-decoration: none;
    }

    /* Print Styles */
    @media print {
        body {
            background: none;
            box-shadow: none;
        }
    }
</style>

</html>